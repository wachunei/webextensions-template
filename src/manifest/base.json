{
    "name": "Your extension name",
    "version": "1.0.0",
    "manifest_version": 2,
    "author": "You!",
    "icons": {
      "16": "img/icon_48.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png",
      "256": "img/icon_256.png"
    },
    "description": "WebExtension description",
    "permissions": [
      "notifications"
    ],
    "browser_action": {
      "default_icon": "img/icon_256.png",
      "default_title": "Open popup!",
      "default_popup": "pages/popup.html"
    },
    "background": {
      "scripts": [
        "js/background.js"
      ]
    },
    "options_ui": {
      "page": "pages/options.html",
      "chrome_style": true
    }
  }